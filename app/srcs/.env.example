# ======================
# Domain Configuration
# ======================
DOMAIN_NAME=example.com

# ======================
# Database Configuration
# ======================
DB_NAME=wordpress
DB_ROOT_PASSWORD=your_root_password_here
DB_USER=wp_user
DB_PASSWORD=your_db_password_here

# ======================
# WordPress Configuration
# ======================
WP_URL=https://example.com
WP_TITLE=My WordPress Site

# WordPress Admin
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=your_admin_password_here
WP_ADMIN_EMAIL=admin@example.com

# WordPress Editor
WP_EDITOR_USER=editor
WP_EDITOR_PASSWORD=your_editor_password_here
WP_EDITOR_EMAIL=editor@example.com

# ======================
# Volume Paths
# ======================
WP_VOLUME_PATH=/path/to/wordpress/data
WP_LOGS_PATH=/path/to/wordpress/logs
DB_VOLUME_PATH=/path/to/database/data
DB_LOGS_PATH=/path/to/database/logs
NGINX_LOGS_PATH=/path/to/nginx/logs
